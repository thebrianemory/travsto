<div class="container">
  <div class="col-md-8">
    <% if params[:user_id] %>
      <h2>Travel Stories by <%= params[:user_id] %></h2>
    <% else %>
    <h1>Browse Travel Stories</h1>
    <% end %>
    <% @trips.each do |trip| %>
      <div class="col-md-12 well well-white">
        <p><span class="trip-title"><%= link_to trip.title, user_trip_path(trip.user, trip) %></span> by
        <%= link_to trip.user.name, user_trips_path(trip.user) %></p>
        <p><%= truncate(trip.description, length: 250) %> <%= link_to "Read More" %></p>
      </div>
    <% end %>
  </div>
</div>
